<%= form_with model: post, local:true do |f| %>
<%= render 'microposts/error_messages' %>
  <div class="form-group">
    <%= f.label :artist %>
    <%= f.text_field :artist, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :song %>
    <%= f.text_field :song, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :youtube_url %>
    <%= f.text_field :youtube_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: "7" %>
  </div>
  <p>
    <%= f.submit "シェアする",class: "btn btn-block btn-primary" %>
  </p>
  <p>
    <%= link_to '戻る', :back, class: "btn btn-block btn-secondary" %>
  </p>
<% end %>