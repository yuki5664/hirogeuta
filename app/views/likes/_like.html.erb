  <% if current_user.likes.find_by(micropost_id: post.id) %>
    <%= link_to unlike_path(post.id), method: :delete do %>
      <div class="like"><i class="fas fa-heart"></i></div>
    <% end %>
  <% else %>
    <%= link_to like_path(post.id), method: :micropost do %>
      <div class="unlike"><i class="far fa-heart"></i></div>
    <% end %>
  <% end %>
  <%= post.likes.count %>