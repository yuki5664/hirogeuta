<div class="container mt-5">
  <div class="row">
    <div class="col-lg-5">
      <div class="row ">
        <div class="col-4 text-center">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize_to_fill: [150, 150]).processed, class: "img-thumbnail rounded-circle" %>
          <% else %>
            <%= image_tag "no_image.png", class: "img-thumbnail rounded-circle" %>
          <% end %>
        </div>
        <div class="col-8">
          <h1><%= @user.name %></h1>
          <% if @user.id == current_user.id %>
            <p class="btn btn-outline-secondary"><%= link_to t("編集"), edit_user_path(@user) %></p>
          <% end %>
          
        </div>
      </div>
      <div class="row">
        <div class="mt-3 mb-3 ml-2 col-4">
          <%= render 'follow_form' if logged_in? %>
        </div>
        <div class="mt-3 mb-3 col-7">
          <%= render 'shared/stats' %>
        </div>
      </div>
    </div>
    <div class="col-lg-7">
      <div class="row">
        <div class="col-10 mx-auto">
        <h2 class="mb-4"><%= @title %></h2>
          <% if @users.any? %>
            <% @users.each do |user| %>
              <%= link_to user_path(user), style: "color:black; text-decoration: none;" do %>
                <h4>
                  <% if user.avatar.attached? %>
                    <%= image_tag user.avatar.variant(resize_to_fill: [40, 40]).processed, class: "img-thumbnail rounded-circle" %>
                  <% else %>
                    <%= image_tag "no_image.png", class: "img-thumbnail rounded-circle no-image" %>
                  <% end %>
                  <%= user.name %>
                </h4>
              <% end %>
              <hr>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>